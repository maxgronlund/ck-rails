<html>
<title>carikerjaan.id</title>
<link rel="stylesheet" href="/themes/css/bootstrap.min.css">
<link rel="stylesheet" href="/assets/css/jobfront.css">
<link rel="stylesheet" href="/assets/css/jobdetail.css">
<body>
<div id="banner" class="row">
  <nav class="navbar">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">carikerjaan.id</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
        </ul>
        <ul class="nav navbar-nav navbar-right top-menu">
          <% if @current %>
              <li><a href=""><%= @current.user_name %></a></li>
              <% if @current.user_role == 'user' %>
                  <li><a href="/basic">dashboard</a></li>
              <% else %>
                  <li><a href="/<%= @current.user_role %>">dashboard</a></li>
              <% end %>
              <li class="active"><a href="/logout">logout</a></li>
          <% else %>
              <li class="active"><a href="/login">login as member</a></li>
              <li class=""><a href="/register">register</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
<div class="row">
  <div class="container">
    <div class="job-box col-md-10 col-md-offset-1">
      <div class="row">
        <div class="container">
          <div class="col-md-5">
            <h1><%= @job.job_name %></h1>
            <h5><%= @job.city.city_name %> - <%= @job.state.state_name %></h5>
            <h5><%= @job.salary.salary_string %></h5>
            <a class="btn btn-primary">Subscribe</a>
          </div>
          <div class="col-md-5 pull-right">
            <img src="<%= @job.user.avatar_url() %>" width="185" height="185">
          </div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="container">
          <div id="job-content" class="col-md-10">
           <%= raw @job.job_description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="job-footer">

  </div>
</div>
</body>

<!-- js -->
<script type="text/javascript" src="/themes/js/jquery-2.1.1.js"></script>
<script type="text/javascript" src="/themes/js/bootstrap.min.js"></script>
<script type="text/javascript">

</script>
</html>